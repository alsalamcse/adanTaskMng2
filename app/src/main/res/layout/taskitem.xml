<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1418A5D6"
    android:backgroundTint="@android:color/holo_blue_light"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativlay"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:background="@color/colorAccent"
            android:backgroundTintMode="add">

            <TextView
                android:id="@+id/ItmTvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="325dp"
                android:fontFamily="serif"
                android:text="TextView" />

            <CheckBox
                android:id="@+id/itmChbxlsCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="137dp"
                android:fontFamily="serif"
                android:text="is Completed" />

            <RatingBar
                android:id="@+id/itmRatingPrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="152dp"
                android:layout_marginBottom="124dp"
                android:background="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorAccent" />

            <TextView
                android:id="@+id/itmTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="81dp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <ImageView
                android:id="@+id/itmImgInfo"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="277dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>